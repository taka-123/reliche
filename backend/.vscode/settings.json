{
  // ===================================
  // Laravel開発ツール設定
  // ===================================
  // Laravel Pint設定
  "laravel-pint.enable": true,
  "laravel-pint.binPath": "./vendor/bin/pint",

  // PHPStan設定
  "phpstan.binPath": "./vendor/bin/phpstan",
  "phpstan.configPath": "./phpstan.neon",
  "phpstan.rootDir": "./",
  "phpstan.enabled": true,

  // ===================================
  // Intelephense Laravel専用設定
  // ===================================
  "intelephense.environment.includePaths": [
    "./vendor",
    "./vendor/laravel/framework/src",
    "./vendor/php-open-source-saver/jwt-auth/src"
  ],
  "intelephense.environment.documentRoot": "./public",
  "intelephense.index.projectRoot": "./",
  "intelephense.completion.insertUseDeclaration": true,
  "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": false,
  "intelephense.files.exclude": [
    "**/node_modules/**",
    "**/storage/logs/**",
    "**/storage/framework/cache/**",
    "**/storage/framework/sessions/**",
    "**/storage/framework/views/**",
    "**/bootstrap/cache/**"
  ],
  "intelephense.diagnostics.enable": true,
  "intelephense.diagnostics.run": "onSave",
  "intelephense.stubs": [
    "apache",
    "bcmath",
    "bz2",
    "calendar",
    "com_dotnet",
    "Core",
    "ctype",
    "curl",
    "date",
    "dba",
    "dom",
    "enchant",
    "exif",
    "FFI",
    "fileinfo",
    "filter",
    "fpm",
    "ftp",
    "gd",
    "gettext",
    "gmp",
    "hash",
    "iconv",
    "imap",
    "intl",
    "json",
    "ldap",
    "libxml",
    "mbstring",
    "meta",
    "mysqli",
    "oci8",
    "odbc",
    "openssl",
    "pcntl",
    "pcre",
    "PDO",
    "pdo_ibm",
    "pdo_mysql",
    "pdo_pgsql",
    "pdo_sqlite",
    "pgsql",
    "Phar",
    "posix",
    "pspell",
    "readline",
    "Reflection",
    "session",
    "shmop",
    "SimpleXML",
    "snmp",
    "soap",
    "sockets",
    "sodium",
    "SPL",
    "sqlite3",
    "standard",
    "superglobals",
    "sysvmsg",
    "sysvsem",
    "sysvshm",
    "tidy",
    "tokenizer",
    "xml",
    "xmlreader",
    "xmlrpc",
    "xmlwriter",
    "xsl",
    "Zend OPcache",
    "zip",
    "zlib"
  ],

  // ===================================
  // PHP専用フォーマッター（上書き）
  // ===================================
  "[php]": {
    "editor.defaultFormatter": "open-southeners.laravel-pint"
  },
  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
  }
}
