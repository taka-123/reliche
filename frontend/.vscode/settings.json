{
  // Nuxt固有の除外設定
  "files.exclude": {
    "**/.nuxt": true,
    "**/node_modules": true,
    "**/.output": true
  },

  // cSpell設定
  "cSpell.words": [
    "pinia",
    "Reliche",
    "nuxt",
    "composables",
    "vuetify"
  ],

  // Vue/Nuxt開発用設定
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "vue.inlayHints.missingProps": false,
  "vue.inlayHints.optionsWrapper": false,

  // ESLint設定 - @nuxt/eslint使用
  "eslint.useFlatConfig": true
}
