{
  "cleanupPeriodDays": 30,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(README*)",
      "Read(package.json)",
      "Read(pyproject.toml)",
      "Read(Cargo.toml)",
      "Read(go.mod)",
      "Read(.gitignore)",
      "Read(LICENSE*)",
      "Read(CHANGELOG*)",
      "List(*)",
      "Bash(git status)",
      "Bash(git log --oneline -10)",
      "Bash(git diff)",
      "Bash(git branch)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(which:*)",
      "Bash(whoami:*)",
      "Bash(echo:*)",
      "Bash(cat package.json)",
      "Bash(cat pyproject.toml)",
      "Bash(cat Cargo.toml)",
      "Bash(cat go.mod)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com/*/releases)",
      "WebFetch(domain:pypi.org/project/*)",
      "WebFetch(domain:npmjs.com/package/*)"
    ],
    "deny": [
      "Read(**/.env*)",
      "Write(**/.env*)",
      "Edit(**/.env*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*key*)",
      "Read(**/*token*)",
      "Read(~/.ssh/*)",
      "Write(~/.ssh/*)",
      "Read(~/.aws/*)",
      "Write(~/.aws/*)",
      "Read(~/.gcp/*)",
      "Write(~/.gcp/*)",
      "Read(**/config/database*)",
      "Write(**/config/database*)",
      "Read(.npmrc)",
      "Write(.npmrc)",
      "Read(.pypirc)",
      "Write(.pypirc)",
      "Bash(rm:*)",
      "Bash(rm -rf*)",
      "Bash(sudo:*)",
      "Bash(nc:*)",
      "Bash(mkfs:*)",
      "Bash(dd:*)",
      "Bash(curl*|bash)",
      "Bash(wget*|bash)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongod:*)",
      "Bash(*DROP*)",
      "Bash(*DELETE FROM*)",
      "Bash(*TRUNCATE*)",
      "Bash(*ALTER TABLE*DROP*)",
      "Bash(git push origin main*)",
      "Bash(git push origin master*)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)",
      "Bash(git rebase*)",
      "Bash(gh auth*)",
      "Bash(gh release create*)",
      "Bash(gh repo delete*)",
      "Bash(gh secret set*)",
      "Bash(gh variable set*)",
      "Bash(docker system prune*)",
      "Bash(docker volume rm*)",
      "Bash(killall*)",
      "Bash(pkill*)",
      "WebFetch(*auth*)",
      "WebFetch(*login*)",
      "WebFetch(*password*)",
      "WebFetch(*secret*)",
      "WebFetch(*token*)",
      "WebFetch(*admin*)",
      "mcp__supabase__execute_sql"
    ]
  }
}
